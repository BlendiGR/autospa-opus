generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Tyre {
  id         Int       @id @default(autoincrement())
  number     String    @db.VarChar(20) //customer's number 
  plate      String    @unique @db.Citext
  location   String?   @db.VarChar(50)
  dateStored DateTime?
  deletedAt  DateTime?
  customerId Int?
  isStored   Boolean   @default(true)
  customer   Customer? @relation(fields: [customerId], references: [id])

  @@index([location])
  @@index([isStored])
  @@index([plate])
  @@index([number])
}


model InvoiceItem {
  id        Int      @id @default(autoincrement())
  invoiceId Int
  service   String
  price     Decimal
  invoice   Invoices @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  
  @@index([invoiceId])
}

model Invoices {
  id          Int       @id @default(autoincrement())
  customerId  Int?
  plate       String    @db.Citext
  items       InvoiceItem[]
  totalAmount Decimal
  totalTax    Decimal
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  customer    Customer? @relation(fields: [customerId], references: [id])

  @@index([customerId])
  @@index([plate])
}

model Customer {
  id       Int        @id @default(autoincrement())
  email    String?    @unique
  phone    String?
  name     String
  company  String?
  invoices Invoices[]
  tyres    Tyre[]

  @@index([email])
  @@index([phone])
  @@index([company])
}

model User {
  id                  Int                  @id @default(autoincrement())
  email               String?              @unique
  password            String
  phone               String?
  name                String
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  passwordResetTokens PasswordResetToken[]

  @@index([email])
}

model PasswordResetToken {
  id         Int       @id @default(autoincrement())
  token      String    @unique  // 6-digit verification code
  resetToken String?   @unique  // UUID for password reset page
  userId     Int
  expiresAt  DateTime
  createdAt  DateTime  @default(now())
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([resetToken])
}
